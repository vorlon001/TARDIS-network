[req]
default_bits       = {{ tls_default_bits }}
prompt = no
distinguished_name = req_distinguished_name
req_extensions = v3_req

[req_distinguished_name]
countryName         = {{ tls_countryName }}
stateOrProvinceName = {{ tls_stateOrProvinceName }}
localityName = {{ tls_localityName }}
organizationName = {{ tls_organizationName }}
organizationalUnitName = {{ tls_organizationalUnitName }}

[v3_req]
subjectAltName = @alt_names

[alt_names]
{% if kolla_external_fqdn != kolla_external_vip_address %}
DNS.1 = {{ kolla_external_fqdn }}
{% endif %}
{% for host in groups['tls-backend']%}
IP.{{ loop.index }} = {{ host }}
{% endfor %}
